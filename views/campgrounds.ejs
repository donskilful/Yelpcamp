<% include partials\header  %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 style="text-align: center;">
                This is the campgrounds page
            </h1>
            <p>
                View Our Hand-picked Campgrounds From All Over The World
            </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds){  %>
        <div class=" col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <img src="<%= campgrounds.image  %>">
            </div>
            <div class="caption">
                <h4> <%=campgrounds.name %> </h4>
            </div>
            <div class="description">
                <p> <%=campgrounds.description.substring(0,150) %> ... </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% include partials\footer  %>